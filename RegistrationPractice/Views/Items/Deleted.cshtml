@model RegistrationPractice.Entities.Item

@{
    ViewBag.Title = "Deleted";
}

<div class="modal fade" id="DeleteReasonModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-notify modal-warning" role="document">
        <div class="modal-content">
            <div class="modal-header text-center" style="background-color:saddlebrown; color:white;">
                <h4 class="modal-title white-text w-100 font-weight-bold py-2">Feedback Requested?</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <form method="post" action="/Items/Deleted">
                <div class="modal-body">

                    <div class="form-group">
                        <label for="recipient-name" class="form-control-label">Recovery Questionnaire</label>

                    </div>
                    <div class="form-group">
                        <select name="deleted">
                            <option>Item Recovered through awolr.com</option>
                            <option>Item Returned through another source</option>
                            <option>Item Not Returned</option>
                        </select>
                    </div>

                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-outline-secondary" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-outline-danger">Finish</button>
                </div>
            </form>
        </div>
    </div>
</div>






