@model RegistrationPractice.Entities.Item

@{
    ViewBag.Title = "Edit";
}


<div class="form-horizontal">
    @using (Html.BeginForm("Edit", "Items", FormMethod.Post, new { enctype = "multipart/form-data", @class = "simpleform" }))
    {
        @Html.AntiForgeryToken()



        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)
        @Html.HiddenFor(model => model.OwnerUserEmail)
        @Html.HiddenFor(model => model.PostTypeID)
        @Html.HiddenFor(model => model.LostLocation)
        @Html.HiddenFor(model => model.City)
        @Html.HiddenFor(model => model.Country)
        @Html.HiddenFor(item => item.imageURL)
        @Html.HiddenFor(item => item.CreationDate)
        @Html.HiddenFor(item => item.LocationID)
        <input type="hidden" id="UpdatedActionsFileUpload" name="UpdatedActionsFileUpload" value="none" />
      

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <h1>Edit Form</h1>
        <div class="www">



            @Model.PostType.PostTypeText


        </div>


        <div class="www">



            @Model.City



        </div>

        <div class="www">



            @Model.LostLocation


        </div>

        <div class="www">



            @Html.EditorFor(model => model.ItemReward, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.ItemReward, "", new { @class = "text-danger" })


        </div>
        <br /><br />

        <div class="www">



            @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })

        </div>
        <br /><br />




        <div class="www">

            @Html.EditorFor(model => model.AdditionalNotes, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.AdditionalNotes, "", new { @class = "text-danger" })
        </div>
     





        <div class="form-group upload-file-interface">
            @Html.LabelFor(model => model.imageURL, htmlAttributes: new { @class = "control-label col-md-2 " })

            <div class="col-md-4">

                <div class="btn btn-primary">
                    <input type="file" name="files" id="files" multiple="multiple" accept=".jpg,.jpeg,.png" file-upload />
                </div>
                <div>.jpg,.png (5MB MAX)</div>

                <div class="alert alert-danger hidden">File Could Not Be Uploaded</div>
            </div>
        </div>



        <div class="www">
            @if (ViewBag.ImageUrl == null)
            {
                <div img-preview class="thumbnail" id="img-preview" style="display:none">



                    <div img-preview class="thumbnail" id="img-preview">

                        <img class="img-responsive" src="@ViewBag.ImageUrl" target-img />

                        <div class="caption">

                            <a href="#" onclick="ClearPreview()"><i class="glyphicon glyphicon-trash"></i> </a>
                            <p img-description></p>

                        </div>

                    </div>


                </div>
            }
            @if (ViewBag.ImageUrl != null)
            {
                <div img-preview class="thumbnail" id="img-preview" >



                    <div img-preview class="thumbnail" id="img-preview">

                        <img class="img-responsive" src="@ViewBag.ImageUrl" target-img />

                        <div class="caption">

                            <a href="#" onclick="ClearPreview()"><i class="glyphicon glyphicon-trash"></i> </a>
                            <p img-description></p>

                        </div>

                    </div>


                </div>
            }

        </div>




        <div class="www">
            <input type="submit" />
        </div>
        <br>
        <br />

                        }
</div>

