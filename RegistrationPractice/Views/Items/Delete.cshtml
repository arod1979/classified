@model RegistrationPractice.Entities.Item

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Item</h4>
    <hr />
    <dl class="dl-horizontal">


        <dd>
            @Html.DisplayFor(model => model.Category.CategoryText)
        </dd>


        <dd>
            @Html.DisplayFor(model => model.Location.LocationText)
        </dd>


        <dd>
            @Html.DisplayFor(model => model.ItemReward)
        </dd>

        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>



        <dd>
            @Html.DisplayFor(model => model.CreationDate)
        </dd>






        <dd>
            @Html.DisplayFor(model => model.AdditionalNotes)
        </dd>






    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-info" /> |
            @Html.ActionLink("Back to List", "UserPosts")
        </div>
    }
</div>
