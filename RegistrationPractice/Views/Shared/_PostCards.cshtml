@model List<RegistrationPractice.Entities.Item>
@using Microsoft.AspNet.Identity
<link href="~/Content/projectcards.css" rel="stylesheet" />
@{
    string returnurl = String.Format("{0}&rp={1}", HttpContext.Current.Request.Url.PathAndQuery, ViewBag.paging);
}
@if (@Model.Count == 0)
{
    <h1>No @ViewBag.PostType Items</h1>
}
else
{
    <h1>@ViewBag.ItemCount  @ViewBag.PostType Items</h1>
}
<div class="container">
    <div class="row">
        @for (var i = 0; i < Model.Count; i++)
        {

            var item = Model[i];
            string dat = "i" + item.Id;
            string shareid = @dat + "share";
            string buttonid = item.Id + "button";
            string checkboxid = item.Id + "checkbox";
            string messagesent = "sent" + item.Id;
            string messageid = "message" + item.Id;

            <div class="col-sm-3 d-flex fullwidth">

                <div class="card project project-default" style="width:100%;">
                    @*style="width: 75rem;"*@


                    <div class="card-body">
                        <h5 class="card-title">@item.Description</h5>
                    </div>
                    @if (item.imageURL != null)
                    {
                        <img class="card-img-top" src=@item.imageURL alt="@item.imageURL">
                    }
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">@ViewBag.PostType location: @item.LostLocation</li>
                        <li class="list-group-item"><b style="color:#85bb65">REWARD: $@item.ItemReward</b></li>
                        <li class="list-group-item">Created: @item.CreationDate.ToString("MM/dd/yyyy")</li>
                        <li class="list-group-item">Views: @item.Visits</li>
                        <li class="list-group-item">Notes: @item.AdditionalNotes</li>
                        <li class="list-group-item">Category: @item.Category.CategoryText</li>
                        @if (@item.SerialNumber != null)
                        {
                            <li class="list-group-item">Serial Number: @item.SerialNumber</li>
                        }
                        <li class="list-group-item">@Html.ActionLink("Contact & Share", "Details", "Items", new { state = item.Id }, new { returnUrl = returnurl })</li>

                        <ul class="list-group list-group-flush" style="display:inline-block;">
                            <li class="list-group-item" style="float:left; padding-left:15px;"><h7>Id: @item.Id<h7 /></li>
                            <li class="list-group-item" style="float:right; padding-right:15px;"><h7>@Html.ActionLink("Report", "Report", new { id = item.Id, returnUrl = returnurl })</h7> </li>
                        </ul>

                    </ul>
                </div> @*//end of card body*@
            </div>@*//end of col*@

        }
    </div>
</div>
@{
    int itemsperpage = ViewBag.itemsperpage;
    int totalitems = ViewBag.totalitems;
    int currentpage = ViewBag.paging;
    int totalpages = (totalitems + itemsperpage - 1) / itemsperpage;
    int previous = currentpage - 1;
    int next = currentpage + 1;

}

<div aria-label="Page navigation example">
    <ul class="pagination justify-content-center">

        @if (previous > 0)
        {
            var id = "p" + previous;
            <li class="page-item"><a id="@id" class="page-link">Previous</a></li>
        }

        @for (var j = 0; j < totalpages; j++)
        {
            int indexshift = j + 1;
            var id = "page" + indexshift;
            string active = "";
            if (currentpage == indexshift)
            {
                active = "active";
            }

            <li class="page-item @active"><a id="@id" class="page-link">@indexshift</a></li>

        }
        @if (next <= totalpages)
        {
            var id = "n" + next;
            <li class="page-item"><a id="@id" class="page-link">Next</a></li>
        }
    </ul>
</div>

<script>
    var a2a_config = a2a_config || {};
    a2a_config.onclick = 1;
</script>
<script async src="https://static.addtoany.com/menu/page.js"></script>

